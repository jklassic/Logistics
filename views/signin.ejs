<%- include('./partials/head.ejs') %>
<style>

/* Login Card */
.login-card {
  background: white;
  width: 70%;
  padding: 40px 5px;
  border-radius: 16px;
  box-shadow: 0 20px 50px rgba(0,0,0,0.08);
  animation: fadeIn 0.6s ease;
}

.writeup {
    width: 45%;
}

/* Custom Input */
.custom-input {
  padding: 12px;
  border-radius: 8px;
  border: 1px solid #ddd;
  transition: 0.3s ease;
}

.custom-input:focus {
  border-color: #418d69;
  box-shadow: 0 0 0 3px rgba(25,135,84,0.15);
}

/* Button */
#form_btn {
  background: #198754;
  color: white;
  padding: 12px;
  border-radius: 8px;
  font-weight: 600;
  transition: 0.3s ease;
}

#form_btn:hover {
  background: #157347;
  transform: translateY(-2px);
}

/* Animation */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

</style>
<body>
    <%- include('./partials/nav.ejs') %>

    <div class="slide">
        <marquee behavior="" direction="">
            <p>YOUR LOGISTICS PARTNER IN EVERY MOVE!  <span>YOUR LOGISTICS PARTNER IN EVERY MOVE!</span> </p>
        </marquee>
    </div>

    <div class="container-fluid vh-100" style="font-family: 'Poppins', sans-serif;">
        <div class="row h-100">

            <div class="col-lg-6 d-none d-lg-flex bg-success writeup">
                <div class="text-white text-center m-auto">
                    <h1 class="display-5 fw-bold">ABC Logistics Portal</h1>
                    <p class="lead">Manage deliveries. Track parcels. Stay in control.</p>
                </div>
            </div>

            <div class="col-lg-6 d-flex align-items-center justify-content-center">

                <div class="login-card">
                    <h3 class="text-center mb-4 fw-semibold">Welcome Back</h3>

                    <form action="/signin" method="post" class="register_goods">
                        <h4 style="margin: 0 auto; text-decoration: underline;">LOGIN</h4>

                        <div>
                            <h5 style="text-align: center; margin: 1em 0;"><%=messages%></h5>
                        </div>

                        <input type="text" name="email" placeholder="EMAIL" id=""> 

                        <div class="password-wrapper">
                            <input type="password" name="password" placeholder="*********" id="password">
                            <span id="togglePassword" class="toggle-password">üëÅ</span>
                        </div>

                        <button type="submit" id="form_btn" class="bg-success">LOG IN</button>
                    </form>

                    <div class="d-flex justify-content-between mt-3 small">
                        <a href="/signup">Create Account</a>
                        <a href="/forgetPassword">Forgot Password</a>
                    </div>
                </div>
            </div>

        </div>
    
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>

    <script>
        const passwordInput = document.getElementById('password');
        const togglePassword = document.getElementById('togglePassword');

        togglePassword.addEventListener('click', ()=> {
            if (passwordInput.type === "password") {
                password.type = 'text'
            } else {
                passwordInput.type = "password"
            }
        })
    </script>

</body>
</html>