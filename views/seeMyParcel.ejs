<%- include('./partials/head.ejs') %>
<body>
    <nav class="navbar navbar-expand-lg bg-success">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">LOGISTICS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">HOME</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/abtus">ABOUT US</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/services">LOGISTICS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">CONTACT US</a>
                    </li>
                </ul>
                <form class="d-flex" role="search" action="/search" method="GET">
                    <input class="form-control me-2" type="search" name="q" placeholder="Search" value="<%= q ? q : '' %>" aria-label="Search"/>
                    <button class="btn btn-outline-dark" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav> 

    <div class="slide">
        <marquee behavior="" direction="">
            <p>YOUR LOGISTICS PARTNER IN EVERY MOVE!  <span>YOUR LOGISTICS PARTNER IN EVERY MOVE!</span> </p>
        </marquee>
    </div>

    <div id="my_goods">
        <table class="table table-striped table-success table-hover">
            <tr>
                <th>TRACKING NO</th>
                <th>SENDER</th>
                <th>RECEIVER</th>
                <th>FROM</th>
                <th>TO</th>                
                <th>STATUS</th>
            </tr>
            <% if(parcels.length > 0) { %>
                <% parcels.forEach((parcel)=>{ %>
                    <tr>
                        <td><%= parcel.trackingNumber %></td>
                        <td><%= parcel.sender %></td>
                        <td><%=  parcel.receiver %></td>
                        <td><%= parcel.from %></td>
                        <td><%= parcel.to %></td>                        
                        <td class="status">
                           <p class="status" style="font-weight:bold; color:<%= statusColor[parcel.statusLevel] %>"> <%= parcel.statusLevel%> </p> 
                        </td>
                    </tr>
                <% }) %>
            <% } %>
        </table>
    </div>
   
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
</body>
</html>