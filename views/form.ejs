<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>

    <div class="slide">
        <marquee behavior="" direction="">
            <p>YOUR LOGISTICS PARTNER IN EVERY MOVE!  <span>YOUR LOGISTICS PARTNER IN EVERY MOVE!</span> </p>
        </marquee>
    </div>

    <div>
        <form action="/logistics" method="post" enctype="multipart/form-data" class="register_goods">

            <!-- Sender Details -->
            <div class="row">
                <div class="col-md-6">
                    <div class="form-card">
                        <h5 class="section-title">Sender Information</h5>

                        <input type="text" class="form-control mb-3" name="sender" placeholder="SENDER" id="">
                        <input type="text" class="form-control mb-3" name="senderEmail" placeholder="EMAIL" id="">
                        <input type="text" class="form-control mb-3" name="from" placeholder="FROM" id="">
                    </div>
                </div>

                <!-- Receiver Details -->
                <div class="col-md-6">
                    <div class="form-card">
                        <h5 class="section-title">Receiver Information</h5>

                        <input type="text" class="form-control mb-3" name="receiver" placeholder="RECEIVER" id="">
                        <input type="text" class="form-control mb-3" name="recipientEmail" placeholder="EMAIL OF RECIPIENT" id="">
                        <input type="text" class="form-control mb-3" name="to" placeholder="TO" id="">
                    </div>
                </div>

            </div>

            <!-- Parcel Details -->
            <div class="form-card mt-4">
                <h5 class="section-title">Parcel Details</h5>

                <div class="row">
                    <div class="col-md-4">
                        <input type="text" name="weight" class="form-control mb-3" placeholder="Weight (kg)">
                    </div>

                    <div class="col-md-4">
                        <input type="text" name="description" class="form-control mb-3" placeholder="DESCRIPTION">
                        <!-- <textarea name="description" placeholder="DESCRIPTION" id=""></textarea> -->
                    </div>

                    <div class="col-md-4 status1">
                        <select name="statusLevel" id="" class="mb-1">
                            <option value="PENDING" style="color: red;">PENDING</option>
                        </select>
                    </div>
                </div>
            </div>

            
            <input type="file" name="image" id="">
            <button type="submit" id="form_btn" class="bg-success">SUBMIT</button>
        </form>
              
    </div>


    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
</body>
</html>